<%= form_for(@bill) do |f| %>
  <% if @bill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bill.errors.count, "error") %> prohibited this bill from being saved:</h2>

      <ul>
      <% @bill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3><%= @user.username %></h3>
  
  <div class="field">
    <%= f.label :account_id, "From Account" %><br/>
    <%= f.select( :account_id, @accounts.all.collect { |i| ["#{i.id} : #{number_to_currency(i.current_balance)}", i.id]} ) %>
  </div>

  <div class="field">
    <%= f.label :payee_name %><br>
    <%= f.text_field :payee_name %>
  </div>
  <div class="field">
    <%= f.label :payee_street %><br>
    <%= f.text_field :payee_street %>
  </div>
  <div class="field">
    <%= f.label :payee_city %><br>
    <%= f.text_field :payee_city %>
  </div>
  <div class="field">
    <%= f.label :payee_state %><br>
    <%= f.text_field :payee_state %>
  </div>
  <div class="field">
    <%= f.label :payee_zip %><br>
    <%= f.text_field :payee_zip %>
  </div>
  <div class="field">
    <%= f.label :payee_account_id %><br>
    <%= f.number_field :payee_account_id %>
  </div>
  <div class="field">
    <%= f.label :amount_string %><br>
    <%= f.text_field :amount_string %>
  </div>
  <div class="field">
    <%= f.label :pay_date %><br>
    <%= f.date_select :pay_date %>
  </div>

  <div class="field">
    <%= f.label :is_recurring %><br>
    <%= f.check_box :is_recurring %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
