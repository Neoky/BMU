
<div id="sign-in" class="main control-panel">
    <h1>Sign in</h1>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div id="login"><%= f.label :login %><br />
      <%= f.text_field :login, :autofocus => true %></div>
    
      <div id="password"><%= f.label :password %><br />
      <%= f.password_field :password %></div>
    
      <% if devise_mapping.rememberable? -%>
        <div id="remember-me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
    
      <div><%= f.submit "Sign in" %></div>
    <% end %>
</div>
