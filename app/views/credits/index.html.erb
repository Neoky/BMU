<h1>Listing credits</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Current balance</th>
      <th>Account type</th>
      <th>Monthly account rate</th>
      <th>Is active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <td><%= credit.user_id %></td>
        <td><%= credit.current_balance %></td>
        <td><%= credit.account_type %></td>
        <td><%= credit.monthly_account_rate %></td>
        <td><%= credit.is_active %></td>
        <td><%= link_to 'Show', credit %></td>
        <td><%= link_to 'Edit', edit_credit_path(credit) %></td>
        <td><%= link_to 'Destroy', credit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

