<h1><%= @user.username%></h1>
<%= link_to 'Edit profile', edit_user_registration_path %><br/>
<% if admin? %>
<fieldset>
	<legend>Admin Panel</legend>
	<%= link_to "Create Checking Account", new_checkings_path(:id=>@user.id) %><br/>
	<%= link_to "Create Credit Account", new_credits_path(:id=>@user.id) %><br/>
	<%= link_to "Create Market Account", new_markets_path(:id=>@user.id) %><br/>
	<%= link_to "Create Mortgage Account", new_mortgages_path(:id=>@user.id) %><br/>
	<%= link_to "Create Regular Account", new_regulars_path(:id=>@user.id) %><br/>
	<%= link_to "Make Admin", :controller=>'administrator', :action=>'create', :id=>@user.id %><br/>
	<%= link_to "Make Teller", :controller=>'teller', :action=>'create', :id=>@user.id %><br/>
	<%= link_to "Make Customer", :controller=>'customer', :action=>'create', :id=>@user.id %><br/>
</fieldset>
<% end %>

<h2>Accounts</h2>
<% for account in @accounts %>
	<%= account.id %>
	<%= link_to account.account_type, account_path(account) %><br/>
<% end %>
