<h1>Listing markets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Current balance</th>
      <th>Account type</th>
      <th>Monthly account rate</th>
      <th>Is active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @markets.each do |market| %>
      <tr>
        <td><%= market.user_id %></td>
        <td><%= market.current_balance %></td>
        <td><%= market.account_type %></td>
        <td><%= market.monthly_account_rate %></td>
        <td><%= market.is_active %></td>
        <td><%= link_to 'Show', market %></td>
        <td><%= link_to 'Edit', edit_market_path(market) %></td>
        <td><%= link_to 'Destroy', market, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

