<h2>Transactions</h2>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Type</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.short_hand_type %></td>
        <td><%= transaction.created_at.strftime("%d/%m/%Y@%I:%M%P") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


